<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
   "https://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/prism.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
    <script src="{{ '/js/prism.js' | url }}"></script>

    <header>
      <h1 class="title">
        <a href="{{ '/' | url }}" style="color:white; text-decoration:none;">{{ metadata.title }}</a>
      </h1>
      <p class="tagline">{{ metadata.description }}</p>
      <nav>
        {%- for entry in collections.all | eleventyNavigation %}
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- endfor %}
      </nav>
    </header>


    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <script data-goatcounter="https://soundbarrier.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
  </body>
</html>
